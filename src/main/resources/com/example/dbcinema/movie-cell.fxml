<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<?import javafx.scene.shape.Rectangle?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:id="cellRoot"
      style="-fx-background-color: rgba(30,60,114,0.3); -fx-background-radius: 10; -fx-padding: 15; -fx-spacing: 20; -fx-border-color: #fd5b78; -fx-border-width: 1; -fx-border-radius: 10;">

    <!-- Placeholder for Movie Poster -->
    <Rectangle width="120" height="180" arcWidth="10" arcHeight="10" fill="linear-gradient(to bottom, #1e3c72, #2a5298)">
        <effect>
            <DropShadow color="rgba(0,0,0,0.5)" radius="10" spread="0.2"/>
        </effect>
    </Rectangle>

    <!-- Movie Details -->
    <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 5;">
        <Label fx:id="titleLabel" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label fx:id="genreLabel" style="-fx-text-fill: #aaccff;"/>
            <Label fx:id="durationLabel" style="-fx-text-fill: #aaccff;"/>
            <Label fx:id="ratingLabel" style="-fx-text-fill: #ffcc00; -fx-font-weight: bold;"/>
        </HBox>

        <Label fx:id="descriptionLabel" wrapText="true" style="-fx-text-fill: #cccccc; -fx-max-width: 500;"/>
    </VBox>

    <!-- Show Details Button -->
    <Button fx:id="detailsButton" text="🔍 SHOW DETAILS"
            style="-fx-background-color: linear-gradient(to right, #fd5b78, #ff355e); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(253,91,120,0.5), 10, 0.5, 0, 1);"
            HBox.hgrow="ALWAYS"/>
</HBox>