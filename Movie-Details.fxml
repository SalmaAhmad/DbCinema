<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.shape.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.cinemadb.MovieDetailsController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #0a0a2a, #1a1a3a); -fx-padding: 20;">

    <!-- Top Accent Bar -->
    <Rectangle  height="4" fill="#ff355e" arcWidth="5" arcHeight="5">
        <effect>
            <DropShadow color="#ff355e" radius="10" spread="0.3"/>
        </effect>
    </Rectangle>

    <!-- Back Button -->
    <Button fx:id="backButton" text="← BACK TO MOVIES"
            onAction="#handleBackButtonAction"
            style="-fx-background-color: transparent; -fx-text-fill: #aaccff; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-border-color: #fd5b78; -fx-border-width: 2; -fx-border-radius: 20;"
            alignment="CENTER_LEFT">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>

    <!-- Movie Header Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-background-radius: 10; -fx-background-color: rgba(30,60,114,0.7); -fx-padding: 20; -fx-border-color: #fd5b78; -fx-border-width: 1; -fx-border-radius: 10;">
        <Label fx:id="movieTitleLabel"
               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.5, 0, 1);"/>

        <!-- Rating Stars (without image) -->
        <HBox alignment="CENTER" spacing="5">
            <Text text="★★★★★" style="-fx-fill: #fd5b78; -fx-font-size: 18px;"/>
            <Label fx:id="movieRatingLabel" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Movie Details Section -->
    <GridPane hgap="15" vgap="15" style="-fx-background-color: rgba(30,60,114,0.5); -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #fd5b78; -fx-border-width: 1; -fx-border-radius: 10;">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="GENRE:" style="-fx-text-fill: #aaccff; -fx-font-weight: bold;"/>
        <Label fx:id="movieGenreLabel" GridPane.columnIndex="1"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="LANGUAGE:" style="-fx-text-fill: #aaccff; -fx-font-weight: bold;" GridPane.rowIndex="1"/>
        <Label fx:id="movieLanguageLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="DURATION:" style="-fx-text-fill: #aaccff; -fx-font-weight: bold;" GridPane.rowIndex="2"/>
        <Label fx:id="movieDurationLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="DIRECTOR:" style="-fx-text-fill: #aaccff; -fx-font-weight: bold;" GridPane.rowIndex="3"/>
        <Label fx:id="movieDirectorLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"
               style="-fx-text-fill: white; -fx-font-weight: bold;"/>
    </GridPane>

    <!-- Showtimes Section -->
    <VBox spacing="15" style="-fx-background-color: rgba(40,70,124,0.5); -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: linear-gradient(to right, #fd5b78, #ff355e); -fx-border-width: 2; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(253,91,120,0.3), 15, 0.5, 0, 3);">

        <!-- Header with cinema-style marquee effect -->
        <HBox alignment="CENTER" spacing="15">
            <Rectangle width="30" height="3" fill="#fd5b78"/>
            <Label text="AVAILABLE SHOWTIMES"
                   style="-fx-text-fill: #b3d9ff; -fx-font-size: 22px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 5, 0.7, 0, 1);"/>
            <Rectangle width="30" height="3" fill="#fd5b78"/>
        </HBox>

        <!-- Decorative separator -->
        <Separator style="-fx-background-color: linear-gradient(to right, transparent, #fd5b78, transparent); -fx-padding: 2;"/>

        <!-- Showtimes grid with improved styling -->
        <FlowPane fx:id="showtimeFlowPane"
                  hgap="20"
                  vgap="20"
                  alignment="CENTER"
                  prefWrapLength="650"
                  style="-fx-background-color: transparent;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
        </FlowPane>

        <!-- Visual cue for scrolling -->
        <HBox alignment="CENTER" style="-fx-padding: 5 0 0 0;">
            <Label text="← Scroll for more showtimes →"
                   style="-fx-text-fill: #aaccff; -fx-font-size: 12px; -fx-font-style: italic;"/>
        </HBox>
    </VBox>

    <!-- Bottom Accent Bar -->
    <Rectangle  height="4" fill="#ff355e" arcWidth="5" arcHeight="5">
        <effect>
            <DropShadow color="#ff355e" radius="10" spread="0.3"/>
        </effect>
    </Rectangle>
</VBox>